# Use Thin for our web server
gem 'thin'

gem 'activesupport'
gem 'activerecord'
gem 'bcrypt'

gem 'rake'

gem 'shotgun'

gem 'rack-flash3'

group :test do
  gem 'rspec'
  gem 'rack-test'
  gem 'capybara'
  gem 'shoulda-matchers'
end
