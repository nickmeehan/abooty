<% @users.each do |user| %>
<div class="aboot_detail">
  <div id="gravatar">
    <% email_address = user.email %>
    <% hash = Digest::MD5.hexdigest(email_address) %>
    <% image_src = "http://www.gravatar.com/avatar/#{hash}" %>
    <img src="<%= image_src %>">
  </div>

  <div id="aboot_body">
    <div id="user_handle">
      <a href="/users/<%= user.id %>">@<%= user.handle %></a>
    </div>
  </div>
</div>
<% end %>