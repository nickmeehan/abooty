<div class="aboot_detail">
  <div id="gravatar">
    <% email_address = @aboot.user.email %>
    <% hash = Digest::MD5.hexdigest(email_address) %>
    <% image_src = "http://www.gravatar.com/avatar/#{hash}" %>
    <img src="<%= image_src %>">
  </div>
  
  <div id="aboot_body">
    <div id="user_handle">
      <a href="">@<%= @aboot.user.handle %></a>
    </div>

    <div id="aboot_content">
      <p><%= @aboot.content %></p>
    </div>
  </div>

  <div id="aboot_buttons">
    <div id="reboot_button" class="aboot_footer">
      <form method="post" action="/reboots/new?id=<%= @aboot.id %>">
        <input type="submit" value="Reboot it!"></form>
      </div>
          <div id="reboot_count" class="aboot_footer">
      <%= @aboot.reboots.count %>
    </div>
    </div>
  </div>